{
	"manifest_version": 2,

	"name": "Cybersport Enhancement Suite",
	"description": "The Addon highlights new, user's, and virified user comments",
	"version": "1.0",
	"permissions": ["*://*.cybersport.ru/*"],
  "content_scripts": [
    {
      "matches": ["https://www.cybersport.ru/*"],
      "exclude_matches": ["https://www.cybersport.ru/users/*"],
      "js": ["jquery-3.3.1.min.js", "jquery.initialize.min.js", "content_script.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}