{
	"manifest_version": 2,

	"name": "Opera Extensions — Getting Started",
	"description": "Sample extension for the “Making your first extension” article",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"]
	},

	"permissions": ["*://*.cybersport.ru/*"],
	"browser_action": {
		"default_icon": {
    "48": "icon48.png"
    },
		"default_title": "Go to Dev.Opera!"
	},
  "content_scripts": [
    {
      "matches": ["https://www.cybersport.ru/*"],
      "exclude_matches": ["https://www.cybersport.ru/users/*"],
      "js": ["jquery-3.3.1.min.js", "jquery.initialize.min.js", "content_script.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}